<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanc"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tp1.DocHome.FirstActivity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bienvenue sur "
        android:fontFamily="sans-serif-light"
        android:textColor="@color/bleu"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/buttonR"
        android:layout_alignStart="@+id/buttonR" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/dochome"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/ButtonL"
        android:fontFamily="sans-serif-light"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09"
        android:background="@color/bleu"
        android:onClick="ButtonL"
        android:text="Se connecter"
        android:textColor="@color/blanc"
        android:textAllCaps="false"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonR"
        android:layout_alignStart="@+id/buttonR" />


    <Button
        android:fontFamily="sans-serif-light"
        android:id="@+id/buttonR"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        android:background="@color/bleu"
        android:onClick="ButtonR"
        android:text="S'inscrire"
        android:textColor="@color/blanc"
        android:textAllCaps="false"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />


</RelativeLayout>