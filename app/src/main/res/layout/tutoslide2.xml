<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="Une consultation et un réglement en toute sécurité ! "
            android:textColor="@color/bleu"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text=" Le médecin s'occupe de vous à domicile ! "
            android:textSize="20dp" />

        <TextView
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text=" Il prend en compte de votre carte vitale et mutuelle  "
            android:textSize="20dp" />

        <TextView
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Réglez le reste  en toute sécurité via notre payement en ligne"
            android:textSize="20dp" />

        <TextView
            android:layout_width="349dp"
            android:layout_height="73dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Une fois la visite terminée vous recevrez un récapitulatif complet de votre consultation"
            android:textSize="20dp" />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_trending_flat_black_24dp" />

    </LinearLayout>
</ScrollView>