<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Ajouter ma carte"
            android:textStyle="bold"
            android:textColor="@color/bleu"
            android:textSize="15pt"></TextView>


        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Choisir le type de carte"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal" />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:text="NumÃ©ro de carte"
            android:textSize="20dp"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content"
            />

            <EditText
                android:id="@+id/num_carte"
                android:fontFamily="sans-serif-light"
                android:imeOptions="actionNext"
                android:textStyle="bold"
                android:textSize="20dp"
                android:inputType="number"
                android:maxLength="14"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                />


        <TextView
            android:layout_width="wrap_content"
            android:text="Date d'expiration"
            android:textSize="20dp"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content"
            />

            <EditText

                android:id="@+id/iddateexpiration"
                android:fontFamily="sans-serif-light"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />




        <Button
            android:id="@+id/ajouter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bleu"
            android:onClick="OnClickRegister"
            android:text="Ajouter"
            android:textColor="@color/blanc" />

    </LinearLayout>

</ScrollView>